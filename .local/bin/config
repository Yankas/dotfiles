#!/usr/bin/env zsh
# 
p=$XDG_CONFIG_HOME
if [ $1 = "list" ] 
then
    echo "Dotfiles:"
    while IFS="," read -r rec_column1 rec_column2 rec_column3
    do
        [ -e $(eval echo $rec_column2) ] && echo "$rec_column1"
    done < $XDG_CONFIG_HOME/configrc
else
    while IFS="," read -r rec_column1 rec_column2 rec_column3
    do
        if [ $rec_column1 = $1 ]
        then
            f=$(eval echo $rec_column2)
            tmp_cmd=$rec_column3
        fi
    done < $XDG_CONFIG_HOME/configrc

    case $tmp_cmd in
        edit)
            $EDITOR $f
            ;;
        edit_source)
            $EDITOR $f && source $f  
            ;;
        *)
            $rec_column3
            ;;
    esac
    unset f tmp_cmd
fi
unset p